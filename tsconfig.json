    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "*.ts",
    "twitter.d.ts"
  ]
}

